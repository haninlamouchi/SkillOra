{% extends 'backoffice/base.html.twig' %}

{% block title %}Formations | Skillora Admin{% endblock %}

{% block styles %}
<style>
    .formation-row { transition: all 0.2s ease; }
    .formation-row:hover { background-color: rgba(90, 0, 0, 0.03); }
    .stat-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .stat-card:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0,0,0,0.08); }
    .badge-status { font-size: 0.72rem; padding: 0.35em 0.65em; }
    .empty-state-icon { font-size: 4rem; opacity: 0.15; }
    .btn-action { font-size: 0.8rem; padding: 0.3rem 0.6rem; border-radius: 0.375rem; transition: all 0.15s ease; }
    .search-highlight { background-color: #fff3cd; padding: 0 2px; border-radius: 2px; }
    .fade-in { animation: fadeIn 0.3s ease-in; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>
{% endblock %}

{% block body %}
<main class="admin-content">
    <div class="container-fluid px-4">

        {# ── Flash messages ── #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'success' ? 'success' : (type == 'warning' ? 'warning' : 'danger') }} alert-dismissible fade show mt-3 fade-in" role="alert">
                    <i class="bi bi-{{ type == 'success' ? 'check-circle' : (type == 'warning' ? 'exclamation-triangle' : 'x-circle') }} me-2"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# ── Page header ── #}
        <div class="mb-4 fade-in">
            <div class="row align-items-center">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-sm mb-1">
                            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Formations</li>
                        </ol>
                    </nav>
                    <h1 class="page-title">Formations</h1>
                    <p class="page-subtitle">Gérez les parcours d'apprentissage disponibles sur votre plateforme.</p>
                </div>
                <div class="col-auto">
                    <a href="{{ path('app_formation_new') }}" class="btn btn-skillora">
                        <i class="bi bi-plus-lg me-1"></i> Nouvelle Formation
                    </a>
                </div>
            </div>
        </div>

        {# ── Dynamic Stats ── #}
        {% set totalParticipants = 0 %}
        {% set totalVideos = 0 %}
        {% set activeCount = 0 %}
        {% set completedCount = 0 %}
        {% for f in formations %}
            {% set totalParticipants = totalParticipants + f.participations|length %}
            {% set totalVideos = totalVideos + f.videos|length %}
            {% if f.dateFin is null or f.dateFin|date('Y-m-d') >= 'now'|date('Y-m-d') %}
                {% set activeCount = activeCount + 1 %}
            {% else %}
                {% set completedCount = completedCount + 1 %}
            {% endif %}
        {% endfor %}

        <div class="row g-3 mb-4">
            <div class="col-sm-6 col-xl-3">
                <div class="stat-card">
                    <div class="stat-icon bg-skillora-soft"><i class="bi bi-book"></i></div>
                    <div class="stat-body">
                        <span class="stat-value">{{ formations|length }}</span>
                        <span class="stat-label">Total Formations</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="stat-card">
                    <div class="stat-icon bg-info-soft"><i class="bi bi-people"></i></div>
                    <div class="stat-body">
                        <span class="stat-value">{{ totalParticipants }}</span>
                        <span class="stat-label">Participants inscrits</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="stat-card">
                    <div class="stat-icon bg-success-soft"><i class="bi bi-camera-video"></i></div>
                    <div class="stat-body">
                        <span class="stat-value">{{ totalVideos }}</span>
                        <span class="stat-label">Total Vidéos</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="stat-card">
                    <div class="stat-icon bg-warning-soft"><i class="bi bi-clock-history"></i></div>
                    <div class="stat-body">
                        <span class="stat-value">{{ activeCount }}</span>
                        <span class="stat-label">En cours</span>
                    </div>
                </div>
            </div>
        </div>

        {# ── Formations Table ── #}
        <div class="table-card fade-in">
            <div class="table-card-header">
                <h2 class="table-card-title">
                    <i class="bi bi-journal-text me-2"></i>Liste des Formations
                </h2>
                <div class="table-card-actions d-flex gap-2 align-items-center">
                    <div class="input-group input-group-sm table-search" style="width: 250px">
                        <span class="input-group-text border-end-0 bg-transparent"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0" placeholder="Rechercher..." id="searchFormation">
                    </div>
                    <select class="form-select form-select-sm" id="filterStatus" style="width: 140px">
                        <option value="all">Tous statuts</option>
                        <option value="active">En cours</option>
                        <option value="completed">Terminée</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table skillora-table align-middle mb-0" id="formationsTable">
                    <thead>
                        <tr>
                            <th class="ps-4" style="width: 50px">#</th>
                            <th>Titre</th>
                            <th>Club</th>
                            <th>Période</th>
                            <th class="text-center" style="width: 80px">Vidéos</th>
                            <th class="text-center" style="width: 100px">Participants</th>
                            <th class="text-center" style="width: 90px">Statut</th>
                            <th class="text-end pe-4" style="width: 260px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for f in formations %}
                        {% set isActive = f.dateFin is null or f.dateFin|date('Y-m-d') >= 'now'|date('Y-m-d') %}
                        <tr class="formation-row" data-status="{{ isActive ? 'active' : 'completed' }}">
                            <td class="ps-4 fw-semibold text-muted">{{ f.id }}</td>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    {% if f.image %}
                                        <img src="{{ f.image }}" alt="" class="rounded" width="40" height="40" style="object-fit: cover">
                                    {% else %}
                                        <span class="formation-icon"><i class="bi bi-mortarboard"></i></span>
                                    {% endif %}
                                    <div>
                                        <a href="{{ path('app_formation_show', {id: f.id}) }}" class="fw-semibold text-decoration-none">
                                            {{ f.titre }}
                                        </a>
                                        {% if f.description %}
                                            <br><small class="text-muted">{{ f.description|length > 50 ? f.description|slice(0, 50) ~ '...' : f.description }}</small>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">{{ f.club ?? '—' }}</td>
                            <td class="small text-muted">
                                {% if f.dateDebut %}
                                    <i class="bi bi-calendar3 me-1"></i>{{ f.dateDebut|date('d/m/Y') }}
                                    {% if f.dateFin %}<br><i class="bi bi-arrow-right me-1"></i>{{ f.dateFin|date('d/m/Y') }}{% endif %}
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info badge-status">
                                    <i class="bi bi-play-btn me-1"></i>{{ f.videos|length }}
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-primary badge-status">
                                    <i class="bi bi-people me-1"></i>{{ f.participations|length }}
                                </span>
                            </td>
                            <td class="text-center">
                                {% if isActive %}
                                    <span class="badge bg-success badge-status">
                                        <i class="bi bi-circle-fill me-1" style="font-size: 0.45rem; vertical-align: middle"></i>Actif
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary badge-status">
                                        <i class="bi bi-check-circle me-1"></i>Terminée
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-1">
                                    <a href="{{ path('app_formation_show', {id: f.id}) }}" class="btn btn-outline-primary btn-action" title="Détails">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_formation_edit', {id: f.id}) }}" class="btn btn-outline-warning btn-action" title="Modifier">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-action" title="Supprimer"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal"
                                            data-formation-id="{{ f.id }}"
                                            data-formation-title="{{ f.titre }}"
                                            data-delete-url="{{ path('app_formation_delete', {id: f.id}) }}"
                                            data-csrf-token="{{ csrf_token('delete' ~ f.id) }}">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr id="emptyRow">
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox empty-state-icon d-block mb-2"></i>
                                <p class="mb-2">Aucune formation trouvée.</p>
                                <a href="{{ path('app_formation_new') }}" class="btn btn-skillora btn-sm">
                                    <i class="bi bi-plus-lg me-1"></i> Créer votre première formation
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="table-card-footer d-flex justify-content-between align-items-center">
                <span class="text-muted small" id="resultCount">
                    Affichage de {{ formations|length }} formation{{ formations|length != 1 ? 's' : '' }}
                </span>
                <span class="text-muted small">
                    {{ activeCount }} active{{ activeCount != 1 ? 's' : '' }} &middot; {{ completedCount }} terminée{{ completedCount != 1 ? 's' : '' }}
                </span>
            </div>
        </div>

    </div>
</main>

{# ── Delete Confirmation Modal ── #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer la formation <strong id="deleteFormationTitle"></strong> ?</p>
                <p class="text-muted small mb-0">Cette action est irréversible. Toutes les vidéos et participations associées seront également supprimées.</p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                <form id="deleteForm" method="post">
                    <input type="hidden" name="_token" id="deleteCsrfToken">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3 me-1"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('searchFormation');
    const filterSelect = document.getElementById('filterStatus');
    const tableBody = document.querySelector('#formationsTable tbody');
    const rows = tableBody.querySelectorAll('.formation-row');
    const resultCount = document.getElementById('resultCount');

    // ── Search + Filter ──
    function applyFilters() {
        const search = searchInput.value.toLowerCase().trim();
        const status = filterSelect.value;
        let visible = 0;

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            const rowStatus = row.dataset.status;
            const matchSearch = !search || text.includes(search);
            const matchStatus = status === 'all' || rowStatus === status;

            if (matchSearch && matchStatus) {
                row.style.display = '';
                visible++;
            } else {
                row.style.display = 'none';
            }
        });

        resultCount.textContent = visible + ' formation' + (visible !== 1 ? 's' : '') + ' affichée' + (visible !== 1 ? 's' : '');
    }

    searchInput?.addEventListener('input', applyFilters);
    filterSelect?.addEventListener('change', applyFilters);

    // ── Delete Modal ──
    const deleteModal = document.getElementById('deleteModal');
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const btn = event.relatedTarget;
            document.getElementById('deleteFormationTitle').textContent = btn.dataset.formationTitle;
            document.getElementById('deleteForm').action = btn.dataset.deleteUrl;
            document.getElementById('deleteCsrfToken').value = btn.dataset.csrfToken;
        });
    }

    // ── Auto-dismiss flash messages after 5s ──
    document.querySelectorAll('.alert-dismissible').forEach(alert => {
        setTimeout(() => {
            const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
            bsAlert.close();
        }, 5000);
    });
});
</script>
{% endblock %}
