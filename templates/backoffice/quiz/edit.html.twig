{% extends 'backoffice/base.html.twig' %}

{% block title %}Modifier â€” {{ quiz.titre }} | Skillora Admin{% endblock %}

{% block body %}
<main class="admin-content">
    <div class="container-fluid px-4">

        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'success' ? 'success' : (type == 'warning' ? 'warning' : 'danger') }} alert-dismissible fade show mt-3" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Breadcrumb #}
        <div class="mb-4 mt-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-sm mb-1">
                    <li class="breadcrumb-item"><a href="{{ path('app_formation_index') }}">Formations</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_formation_show', {id: formation.id}) }}">{{ formation.titre }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_quiz_show', {formationId: formation.id, id: quiz.id}) }}">{{ quiz.titre }}</a></li>
                    <li class="breadcrumb-item active">Modifier</li>
                </ol>
            </nav>
            <h1 class="page-title"><i class="bi bi-pencil-square me-2"></i>Modifier le Quiz</h1>
            <p class="text-muted mb-0">Formation : <strong>{{ formation.titre }}</strong></p>
        </div>

        {# Quiz Form (Symfony Form) #}
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informations du Quiz</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="row g-3">
                            <div class="col-md-8">
                                {{ form_row(form.titre) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.duree) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.description) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_quiz_show', {formationId: formation.id, id: quiz.id}) }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-skillora px-4">
                                <i class="bi bi-check-lg me-1"></i> Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>
{% endblock %}
