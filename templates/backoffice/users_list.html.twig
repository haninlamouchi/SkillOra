{% block stylesheets %}
    <style>
        /* ===== PAGE HEADER ===== */
        .page-header-custom {
            background: linear-gradient(135deg, #c10609 0%, #8b0507 100%);
            padding: 20px 50px;
            border-radius: 15px;
            margin-bottom: 40px;
            color: white;
            box-shadow: 0 5px 20px rgba(193, 6, 9, 0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icon {
            font-size: 48px;
        }

        .header-text h1 {
            font-size: 36px;
            font-weight: 700;
            margin: 0 0 5px 0;
            color: white;
        }

        .header-text p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0;
            font-size: 16px;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .badge-total {
            background-color: white;
            color: #c10609;
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: 700;
            font-size: 20px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.15);
        }

        /* ===== BACK BUTTON - Redesign√© ===== */
        .btn-back-custom {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-back-custom:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: white;
            transform: translateX(-5px);
            color: white;
            text-decoration: none;
        }

        .btn-back-custom .icon-arrow {
            font-size: 18px;
            transition: transform 0.3s;
        }

        .btn-back-custom:hover .icon-arrow {
            transform: translateX(-3px);
        }

        /* ===== GRID USERS ===== */
        .users-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        /* ===== USER CARD ===== */
        .user-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border-top: 5px solid #c10609;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .user-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(193, 6, 9, 0.2);
        }

        /* ===== CARD HEADER ===== */
        .user-card-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 25px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f1eaea;
        }

        .user-photo-large {
            width: 85px;
            height: 85px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #c10609;
            box-shadow: 0 5px 15px rgba(193, 6, 9, 0.3);
            flex-shrink: 0;
        }

        .user-photo-placeholder-large {
            width: 85px;
            height: 85px;
            border-radius: 50%;
            background: linear-gradient(135deg, #c10609 0%, #8b0507 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: 700;
            color: white;
            border: 4px solid #c10609;
            box-shadow: 0 5px 15px rgba(193, 6, 9, 0.3);
            flex-shrink: 0;
        }

        .user-name {
            font-size: 20px;
            font-weight: 700;
            color: #000000;
            margin: 0 0 8px 0;
        }

        .user-role-badge {
            display: inline-block;
            background: linear-gradient(135deg, #c10609 0%, #8b0507 100%);
            color: white;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        /* ===== USER INFO ===== */
        .user-info-section {
            flex-grow: 1;
            margin-bottom: 20px;
        }

        .user-info-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 12px 0;
            border-bottom: 1px solid #f8f9fa;
        }

        .user-info-item:last-child {
            border-bottom: none;
        }

        .user-info-icon {
            width: 45px;
            height: 45px;
            background-color: #f1eaea;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            flex-shrink: 0;
        }

        .user-info-label {
            color: #b4b4b6;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 4px;
            letter-spacing: 0.5px;
        }

        .user-info-value {
            color: #000000;
            font-weight: 500;
            font-size: 14px;
        }

        /* ===== BUTTONS ===== */
        .user-actions {
            display: flex;
            gap: 12px;
            margin-top: auto;
        }

        .btn-action {
            flex: 1;
            padding: 12px 20px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 14px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-view {
            background: linear-gradient(135deg, #c10609 0%, #8b0507 100%);
            color: white;
        }

        .btn-view:hover {
            background: linear-gradient(135deg, #8b0507 0%, #6a0405 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(193, 6, 9, 0.4);
            color: white;
            text-decoration: none;
        }

        .btn-edit {
            background-color: #b4b4b6;
            color: white;
        }

        .btn-edit:hover {
            background-color: #9a9a9c;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(180, 180, 182, 0.4);
            color: white;
            text-decoration: none;
        }

        /* ===== NO USERS ===== */
        .no-users-container {
            text-align: center;
            padding: 80px 20px;
            background: linear-gradient(135deg, #f1eaea 0%, #e5dada 100%);
            border-radius: 15px;
            margin: 40px 0;
        }

        .no-users-icon {
            font-size: 100px;
            margin-bottom: 20px;
            opacity: 0.6;
        }

        .no-users-text {
            font-size: 22px;
            color: #000000;
            font-weight: 600;
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 992px) {
            .page-header-custom {
                flex-direction: column;
                align-items: flex-start;
                gap: 20px;
                padding: 30px;
            }

            .header-right {
                width: 100%;
                justify-content: space-between;
            }

            .users-grid {
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .users-grid {
                grid-template-columns: 1fr;
            }

            .header-left {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }

            .header-icon {
                font-size: 36px;
            }

            .header-text h1 {
                font-size: 28px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="container-fluid">
        
        <!-- HEADER AM√âLIOR√â -->
        <div class="page-header-custom">
            <div class="header-left">
                <div class="header-icon">
                    {% if role == 'responsable_club' %}
                        üë•
                    {% else %}
                        üéì
                    {% endif %}
                </div>
                <div class="header-text">
                    {% if role == 'responsable_club' %}
                        <h1>Club Managers</h1>
                    {% else %}
                        <h1>Students</h1>
                    {% endif %}
                </div>
            </div>

            <div class="header-right">
                <span class="badge-total">
                    {{ users|length }} Users
                </span>
                
                <a href="{{ path('app_admin_dashboard') }}" class="btn-back-custom">
                    <span class="icon-arrow">‚¨Ö</span>
                    Back
                </a>
            </div>
        </div>

        {% if users|length > 0 %}
            <!-- GRID DE USERS -->
            <div class="users-grid">
                {% for u in users %}
                    <div class="user-card">
                        
                        <!-- HEADER CARD -->
                        <div class="user-card-header">
                            {% if u.photo %}
                                <img src="{{ asset('uploads/photos/' ~ u.photo) }}" alt="{{ u.prenom }}" class="user-photo-large">
                            {% else %}
                                <div class="user-photo-placeholder-large">
                                    {{ u.prenom|slice(0, 1)|upper }}{{ u.nom|slice(0, 1)|upper }}
                                </div>
                            {% endif %}
                            
                            <div>
                                <h3 class="user-name">{{ u.prenom }} {{ u.nom }}</h3>
                                <span class="user-role-badge">
                                    {% if u.role == 'responsable_club' %}
                                        CLUB MANAGER
                                    {% else %}
                                        STUDENT
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <!-- INFO -->
                        <div class="user-info-section">
                            <div class="user-info-item">
                                <div class="user-info-icon">‚úâÔ∏è</div>
                                <div>
                                    <div class="user-info-label">Email</div>
                                    <div class="user-info-value">{{ u.email }}</div>
                                </div>
                            </div>

                            <div class="user-info-item">
                                <div class="user-info-icon">üìû</div>
                                <div>
                                    <div class="user-info-label">Phone</div>
                                    <div class="user-info-value">{{ u.telephone }}</div>
                                </div>
                            </div>

                            <div class="user-info-item">
                                <div class="user-info-icon">üìÖ</div>
                                <div>
                                    <div class="user-info-label">Registration</div>
                                    <div class="user-info-value">{{ u.dateInscription|date('d/m/Y') }}</div>
                                </div>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="user-actions">
                            <a href="{{ path('app_user_show', {id: u.id}) }}" class="btn-action btn-view">
                                 View
                            </a>
                            <a href="{{ path('app_user_edit', {id: u.id}) }}" class="btn-action btn-edit">
                                 Edit
                            </a>
                        </div>

                    </div>
                {% endfor %}
            </div>
        {% else %}
            <!-- NO USERS -->
            <div class="no-users-container">
                <div class="no-users-icon">üòû</div>
                <p class="no-users-text">No users found with this role</p>
            </div>
        {% endif %}

    </div>
</div>
{% endblock %}