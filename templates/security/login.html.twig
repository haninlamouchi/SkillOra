{% extends 'frontoffice/base.html.twig' %}

{% block title %}Connexion - Skillora{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Supprimer l'espace blanc en haut */
        body {
            padding-top: 0 !important;
            margin: 0;
        }
        
        /* Cacher le header original */
        .header-area {
            display: none !important;
        }
        
        /* Nouveau header rouge personnalis√© */
        .custom-header {
            background: linear-gradient(135deg, #c10609 0%, #8b0507 100%);
            box-shadow: 0 2px 15px rgba(193, 6, 9, 0.3);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 9999;
            padding: 15px 0;
        }
        
        .custom-header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .custom-header .logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        /* Logo dans un cercle */
        .custom-header .logo .logo-circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
            flex-shrink: 0;
        }
        
        .custom-header .logo .logo-circle img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: block;
        }
        
        .custom-header .logo h1 {
            color: white;
            margin: 0;
            font-size: 32px;
            font-weight: 700;
        }
        
        .custom-header .nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 30px;
        }
        
        .custom-header .nav li a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 15px;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .custom-header .nav li a:hover,
        .custom-header .nav li a.active {
            background-color: rgba(241, 234, 234, 0.2);
            color: #f1eaea;
        }
        
        /* Cacher le footer original */
        footer {
            display: none !important;
        }
        
        /* Nouveau footer noir personnalis√© */
        .custom-footer {
            background-color: #000000;
            color: white;
            padding: 30px 0;
            text-align: center;
            margin-top: 0;
        }
        
        .custom-footer p {
            color: white;
            margin: 0;
        }

        .login-section {
            padding: 110px 0 60px 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #f1eaea 0%, #e5dada 100%);
            margin: 0;
            display: flex;
            align-items: center;
        }
        
        .form-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 40px rgba(193, 6, 9, 0.15);
            padding: 40px;
            max-width: 550px;
            margin: 0 auto;
            border-top: 5px solid #c10609;
        }
        
        .page-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 3px solid #c10609;
            text-align: center;
        }
        
        .page-header h1 {
            font-size: 32px;
            font-weight: 700;
            color: #c10609;
            margin-bottom: 10px;
        }
        
        .page-header p {
            color: #b4b4b6;
            margin: 0;
            font-size: 15px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .custom-header .nav {
                display: none;
            }
            
            .custom-header .logo h1 {
                font-size: 24px;
            }
            
            .custom-header .logo .logo-circle {
                width: 55px;
                height: 55px;
            }
            
            .form-container {
                padding: 30px 20px;
            }
            
            .page-header h1 {
                font-size: 26px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- HEADER PERSONNALIS√â ROUGE -->
<div class="custom-header">
    <div class="container">
        <div class="logo">
            <div class="logo-circle">
                <img src="{{ asset('images/logo-skillora.png') }}" alt="Skillora Logo">
            </div>
            <h1>Skillora</h1>
        </div>
    </div>
</div>

<!-- CONTENU DU FORMULAIRE DE CONNEXION -->
<div class="login-section">
    <div class="container">
        <div class="form-container">
            <div class="page-header">
                <h1>üîê Welcome Back!</h1>
                <p>Log in to access your learning platform</p>
            </div>

            {{ include('security/_login_form.html.twig') }}
        </div>
    </div>
</div>

<!-- FOOTER PERSONNALIS√â NOIR -->
<div class="custom-footer">
    <div class="container">
        <p>¬© {{ "now"|date("Y") }} Skillora - Apprendre, grandir, r√©ussir ‚ú®</p>
    </div>
</div>
{% endblock %}