{% extends 'frontoffice/base.html.twig' %}

{% block title %}Connexion | SkillOra{% endblock %}

{% block stylesheets %}
<style>
    .login-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
        padding: 60px 0;
    }
    .login-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 8px 40px rgba(0,0,0,0.1);
        overflow: hidden;
        max-width: 460px;
        margin: 0 auto;
    }
    .login-header {
        background: linear-gradient(135deg, #5a0000 0%, #8b1a1a 50%, #a52a2a 100%);
        padding: 36px 40px;
        text-align: center;
        color: #fff;
    }
    .login-header h1 { font-size: 1.6rem; font-weight: 700; margin-bottom: 6px; }
    .login-header p { opacity: 0.85; margin: 0; font-size: 0.9rem; }
    .login-body { padding: 36px 40px; }

    .form-floating label { color: #888; }
    .form-floating .form-control {
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        padding: 1rem 0.75rem;
    }
    .form-floating .form-control:focus {
        border-color: #5a0000;
        box-shadow: 0 0 0 3px rgba(90,0,0,0.1);
    }

    .btn-login {
        background: linear-gradient(135deg, #5a0000, #8b1a1a);
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 14px;
        font-size: 1.05rem;
        font-weight: 700;
        width: 100%;
        transition: all 0.3s;
    }
    .btn-login:hover {
        background: linear-gradient(135deg, #7a1a1a, #a52a2a);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(90,0,0,0.3);
    }
</style>
{% endblock %}

{% block body %}
<section class="login-section">
    <div class="container">
        <div class="login-card">
            <div class="login-header">
                <h1><i class="fa fa-graduation-cap me-2"></i>SkillOra</h1>
                <p>Connectez-vous pour accéder à votre espace</p>
            </div>
            <div class="login-body">

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fa fa-exclamation-triangle me-2"></i>{{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endif %}

                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post">
                    <div class="form-floating mb-3">
                        <input type="email" name="_username" id="inputEmail"
                               class="form-control" placeholder="Email"
                               value="{{ last_username }}" required autofocus>
                        <label for="inputEmail"><i class="fa fa-envelope me-2"></i>Adresse email</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input type="password" name="_password" id="inputPassword"
                               class="form-control" placeholder="Mot de passe" required>
                        <label for="inputPassword"><i class="fa fa-lock me-2"></i>Mot de passe</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-login" type="submit">
                        <i class="fa fa-sign-in me-2"></i>Se connecter
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a href="{{ path('front_home') }}" style="color: #5a0000; font-weight: 600">
                        <i class="fa fa-arrow-left me-1"></i>Retour à l'accueil
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}
