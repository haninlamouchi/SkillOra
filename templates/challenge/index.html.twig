<!DOCTYPE html>

<title>Challenge index</title>

{% block body %}
    <h1>Challenge index</h1>

    {# Formulaire de recherche #}
    <form method="get" action="{{ path('challenge_search') }}" class="mb-3">
        <input type="text" name="titre" placeholder="Titre" value="{{ app.request.get('titre') }}">
        <input type="date" name="dateDebut" value="{{ app.request.get('dateDebut') }}">
        <input type="date" name="dateFin" value="{{ app.request.get('dateFin') }}">
        <button type="submit">Rechercher</button>
        <a href="{{ path('challenge_search') }}">RÃ©initialiser</a>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Image</th>
                <th>FichierCahierCharges</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for challenge in challenges %}
            <tr>
                <td>{{ challenge.id }}</td>
                <td>{{ challenge.titre }}</td>
                <td>{{ challenge.description }}</td>
                <td>{{ challenge.dateDebut ? challenge.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ challenge.dateFin ? challenge.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ challenge.image }}</td>
                <td>{{ challenge.fichierCahierCharges }}</td>
                <td>
                    <a href="{{ path('app_challenge_show', {'id': challenge.id}) }}">show</a>
                    <a href="{{ path('app_challenge_edit', {'id': challenge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_challenge_new') }}">Create new</a>
{% endblock %}
