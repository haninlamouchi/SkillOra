<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Front{% endblock %}</title>

    <!-- CSS -->
    <link rel="stylesheet" href="{{ asset('assets/frontoffice/vendor/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/frontoffice/css/fontawesome.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/frontoffice/css/templatemo-scholar.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/frontoffice/css/owl.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/frontoffice/css/animate.css') }}">

    {% block stylesheets %}{% endblock %}
</head>

<body>

<!-- ===== HEADER ===== -->
<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- Logo -->
                    <a href="#" class="logo">
                        <h1>SkillOra</h1>
                    </a>

                    <!-- Menu -->
                    <ul class="nav">
                        <li><a href="{{ path('front_home') }}" class="{{ app.request.attributes.get('_route') == 'front_home' ? 'active' : '' }}">Accueil</a></li>
                        <li><a href="{{ path('front_formation_index') }}" class="{{ app.request.attributes.get('_route') starts with 'front_formation' ? 'active' : '' }}">Formations</a></li>
                        <li><a href="#contact">Contact</a></li>
                        {% if app.user %}
                            <li><a href="#" class="text-white-50"><i class="fa fa-user"></i> {{ app.user.fullName }}</a></li>
                            <li><a href="{{ path('app_logout') }}" style="color:#f8d7da"><i class="fa fa-sign-out"></i> Déconnexion</a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}"><i class="fa fa-sign-in"></i> Connexion</a></li>
                        {% endif %}
                    </ul>

                    <a class="menu-trigger">
                        <span>Menu</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ===== HEADER END ===== -->

<!-- ===== PAGE CONTENT ===== -->
{% block body %}{% endblock %}
<!-- ===== PAGE CONTENT END ===== -->

<!-- ===== FOOTER ===== -->
<footer>
    <div class="container">
        <div class="col-lg-12 text-center">
            <p>
                © {{ "now"|date("Y") }} SkillOra. All rights reserved.
            </p>
        </div>
    </div>
</footer>
<!-- ===== FOOTER END ===== -->

<!-- JS -->
<script src="{{ asset('assets/frontoffice/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('assets/frontoffice/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/frontoffice/js/isotope.min.js') }}"></script>
<script src="{{ asset('assets/frontoffice/js/owl-carousel.js') }}"></script>
<script src="{{ asset('assets/frontoffice/js/counter.js') }}"></script>
<script src="{{ asset('assets/frontoffice/js/custom.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
