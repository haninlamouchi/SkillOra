{% extends 'frontoffice/base.html.twig' %}

{% block title %}Admin Dashboard - Skillora{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            padding-top: 0 !important;
            margin: 0;
        }
        
        .header-area {
            display: none !important;
        }
        
        .custom-header {
            background: linear-gradient(135deg, #8b0507 0%, #c10609 100%);
            box-shadow: 0 2px 15px rgba(193, 6, 9, 0.3);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 9999;
            padding: 15px 0;
        }
        
        .custom-header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .custom-header .logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .custom-header .logo .logo-circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background-color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
            flex-shrink: 0;
        }
        
        .custom-header .logo .logo-circle img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: block;
        }
        
        .custom-header .logo h1 {
            color: white;
            margin: 0;
            font-size: 32px;
            font-weight: 700;
        }
        
        .custom-header .nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 30px;
            align-items: center;
        }
        
        .custom-header .nav li a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            padding: 8px 15px;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .custom-header .nav li a:hover,
        .custom-header .nav li a.active {
            background-color: rgba(241, 234, 234, 0.2);
            color: #f1eaea;
        }

        .custom-header .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
            color: white;
        }

        .custom-header .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: #ffd700;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #8b0507;
            font-size: 18px;
            border: 2px solid white;
        }

        .custom-header .logout-btn {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            padding: 8px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .custom-header .logout-btn:hover {
            background-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }
        
        footer {
            display: none !important;
        }
        
        .custom-footer {
            background-color: #000000;
            color: white;
            padding: 30px 0;
            text-align: center;
            margin-top: 0;
        }
        
        .custom-footer p {
            color: white;
            margin: 0;
        }

        .dashboard-section {
            padding: 110px 0 60px 0;
            min-height: 100vh;
            background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
            margin: 0;
        }
        
        .dashboard-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 40px rgba(139, 5, 7, 0.2);
            padding: 40px;
            max-width: 1200px;
            margin: 0 auto;
            border-top: 5px solid #8b0507;
        }
        
        .welcome-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 3px solid #8b0507;
        }
        
        .welcome-header h1 {
            font-size: 36px;
            font-weight: 700;
            color: #8b0507;
            margin-bottom: 10px;
        }

        .welcome-header p {
            color: #666;
            font-size: 18px;
        }

        .welcome-header .role-badge {
            display: inline-block;
            background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
            color: #8b0507;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 14px;
            margin-top: 10px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #fff9e6 0%, #fff5cc 100%);
            padding: 30px;
            border-radius: 10px;
            border-left: 4px solid #8b0507;
            transition: all 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 20px rgba(139, 5, 7, 0.2);
        }

        .stat-card h3 {
            color: #8b0507;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .stat-card p {
            color: #666;
            font-size: 14px;
            margin: 0;
        }

        @media (max-width: 768px) {
            .custom-header .nav {
                display: none;
            }
            
            .custom-header .logo h1 {
                font-size: 24px;
            }
            
            .custom-header .logo .logo-circle {
                width: 55px;
                height: 55px;
            }

            .custom-header .user-info span {
                display: none;
            }
            
            .dashboard-container {
                padding: 30px 20px;
            }
            
            .welcome-header h1 {
                font-size: 28px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

