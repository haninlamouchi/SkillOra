<!DOCTYPE html>

<title>Participation index</title>

{% block body %}
    <h1>Participation index</h1>

    <form method="get" action="{{ path('app_participation_search') }}">
        <input type="text" name="challenge" placeholder="Titre challenge">
        <input type="text" name="groupe" placeholder="Nom groupe">
        <button type="submit">Rechercher</button>
    </form>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateParticipation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.id }}</td>
                <td>{{ participation.dateParticipation ? participation.dateParticipation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_participation_show', {'id': participation.id}) }}">show</a>
                    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_participation_new') }}">Create new</a>
{% endblock %}
