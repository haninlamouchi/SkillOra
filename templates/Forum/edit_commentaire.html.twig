{% extends 'frontoffice/base.html.twig' %}

{% block title %}Edit My Comment{% endblock %}

{% block stylesheets %}
<style>
    .form-page { padding: 100px 0 80px; background: var(--grey-light); min-height: 100vh; }
    .form-page .container { max-width: 700px; margin: 0 auto; padding: 0 24px; }

    .info-box { background: var(--grey-light); border-left: 4px solid var(--darkred); padding: 14px 18px; border-radius: var(--radius-sm); margin-bottom: 24px; font-size: 0.88rem; color: var(--grey-dark); }
    .info-box p { margin: 4px 0; }
    .info-box strong { color: var(--black); }
</style>
{% endblock %}

{% block body %}
<section class="form-page">
    <div class="container">
        <div class="form-hero"><h1>Edit My Comment</h1></div>
        <div class="form-card">
            <div class="info-box">
                <p><strong>Publication:</strong> {{ commentaire.publication.titre }}</p>
                <p><strong>Date:</strong> {{ commentaire.dateCommentaire|date('d/m/Y H:i') }}</p>
            </div>
            {{ form_start(form) }}
                <div class="form-group">{{ form_label(form.contenu) }}{{ form_widget(form.contenu) }}{{ form_errors(form.contenu) }}</div>
                <div class="form-actions">
                    <a href="{{ path('app_forum_show', {'id': commentaire.publication.id}) }}?u={{ userId }}" class="btn-back-form"><i class="fas fa-arrow-left"></i> Back</a>
                    <button type="submit" class="btn-submit"><i class="fas fa-save"></i> Save</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}